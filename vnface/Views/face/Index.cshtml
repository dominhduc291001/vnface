@model IEnumerable<vnface.Models.face_tb>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_layout.cshtml";
}

<h2 class="bg-success text-center">Face</h2>
<script src="/Assets/js/core/jquery.min.js"></script>
<script src="/Assets/js/core/popper.min.js"></script>
<script src="/Assets/js/core/bootstrap-material-design.min.js"></script>
<input type="text" placeholder="tìm kiếm" id="myInput" />
<p>
    @Html.ActionLink("Tạo mới Person", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.gender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.face_image)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.feature)
        </th>
        <th></th>
    </tr>

    <tbody id="myTable">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.gender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.age)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.face_image)
                </td>
                <td>
                    <textarea disabled cols="20" rows="5">@Html.DisplayFor(modelItem => item.feature)</textarea>
                </td>
                <td>
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.id })
                </td>
            </tr>
        }
    </tbody>

</table>
<script>
    $(document).ready(function () {
        $("#myInput").on("keyup", function () {
            var value = $(this).val().toLowerCase();
            $("#myTable tr").filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    });
</script>
<a href="/">Quay lại</a>
